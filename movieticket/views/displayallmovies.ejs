<style>
  .maincontainer{
  background: #1ed69c;
  width:100%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;


  }
  .box{
      background: #43cde5;
      width:80%;
      height:60%;
      border-radius: 10px;
      padding-left:20px;
      padding-right: 20px;
      overflow-y: scroll;
      display: flex;
      flex-direction: column;
      
  }
  .heading{
      font-size: 24px;
      font-weight: bold;
      font-family: Oswald;
      padding:5px;
      letter-spacing: 1;
  }
  .image{width:100px;
          height:100px;
          padding:5px;
         }
  .headingdiv{
      display: flex;
      align-items: center;
     flex-direction: row;
      justify-content: space-between;
      
  }     
  .formDiv{
      margin:10px;

  }   
  .gap{margin-bottom:10px;}
  .btnstyle{
      display: flex;
      align-items: center;
      justify-content: center;
      
  }    
</style>
<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Finger+Paint&family=Lato:wght@900&family=Poppins&display=swap" rel="stylesheet">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

  </head>
  <div class="maincontainer">
    <div class="box">
  
       <div class="headingdiv">
        <div style="display: flex;">
         <div><img src="/images/logo.png" class="image"></div>
         <div class="heading">Movie</div>
        </div> 
         
        <div><a href='/ticket/ticket_interface' style="text-decoration: none;" ><img src="/images/addproduct.png" style="width: 40px;"></a></div>
       </div>
    
   

   <div>
    <%  
      if(data.length==0)
      { %>
        <%=message %>
     <% } else { %>
       <table class="table table-striped">
       <tr>
          <th>#</th>
          <th>Movie Name</th>
          <th>Description</th>
          <th>Cinema</th>
          <th>Screen</th>
          <th>State</th>
          <th>City</th>
          <th>Status</th>
          <th>Poster</th>
          <th>Edit</th>
         </tr>


        <%
         data.map((item,i)=>{ %>
          <tr>
          <td><%=i+1 %></td>
          <td><%=item.moviename%></td>
          <td><%=item.description%></td>
          <td><%=item.cinemaname%></td>
          <td><%=item.screenname%></td>
          <td><%=item.statename%></td>
          <td><%=item.cityname%></td> 
          <td><%=item.status%></td>
          <td><a href="/ticket/displaypictureforedit?movieid=<%=item.movieid %>&moviename=<%=item.moviename %>&movieposter=<%=item.movieposter %>" style="text-decoration:none;"><img src="/images/<%=item.movieposter %>" style="width:60px; height:60px; border-radius: 30px;" ></a></td>

          <td><a href="/ticket/displayforedit?movieid=<%=item.movieid %>" style="text-decoration:none;"><img src="/images/edit.png" style="width:25px; height:25px;" ></a></td></tr>
          

         <% }) %>
          </table> 
       
    <% } %>
   </div>
    </div>
  
  </div>
</html>