<style>
    .container{
        background:#00cec9;
        height: 100vh;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
        
    }

    .box{
        background: #34ace0;
        height: 40%;
        width: 50%;
        border-radius: 30px;
        padding: 20px;
        height: auto;

    }
    .font{ 
        font-family: 'Poppins', sans-serif;
    }
    .heading{
        font-size: 30px;
        font-weight: bold;
        font-family: lato;
        padding: 20px;
    }
    .image{
        width: 100px;
        height: 100px;
        padding: 10px
    }
    .headingdiv{
        display: flex;
        align-items: center;
    }
    .formdiv{
        margin: 5px;
    }
    .gap{
        margin-bottom: 10px;
    }

    .btnstyle{
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Finger+Paint&family=Lato:wght@900&family=Poppins&display=swap" rel="stylesheet">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="/javascripts/movieproject.js"></script>
    </head>
    <body>
        
        <form action="/ticket/edit_movie" method="post">
            <input type="hidden" name="movieid" value="<%=data.movieid %>">
            <div class="container">
                <div class="box">
                    <div class="headingdiv">
                        <div style="display:flex;flex-direction:row;" >
                            <img src="/images/logo.png" class="image"></div>
                        <div class="heading">Movie Ticket</div>
                    
                    
                        <div >
                            <a href="/ticket/fetch_all_movies" style="text-decoration:none;"><img src='/images/display.png' style='width:40'></a>

                            
                        </div>
                    </div>
                    
                    
                    <div class="formdiv"></div>
                        <div class="row gap">
                            <div class="col-md-6"> 
        
                                <select required class="form-select" id="stateid"  name="stateid" aria-label="Default select example">
                                    <option selected value="<%=data.stateid %>"><%=data.statename %></option>
                                    
                                  </select> 
                                  </div> 
                           
                                <div class="col-md-6"> 
            
                                    <select required class="form-select" id="cityid"  name="cityid" aria-label="Default select example">
                                        <option selected value="<%=data.cityid %>"><%=data.cityname %></option>
                                        
                                      </select>  
                                </div>
                                </div>


                                <div class="row gap"> 
                                    <div class="col-md-6"> 
                
                                        <select required class="form-select" id="cinemaid"  name="cinemaid" aria-label="Default select example">
                                            <option selected value="<%=data.cinemaid %>"><%=data.cinemaname %></option>
                                            
                                          </select> 
                                          </div> 
                                   
                                        <div class="col-md-6"> 
                    
                                            <select required class="form-select" id="screenid"  name="screenid" aria-label="Default select example">
                                                <option selected value="<%=data.screenid %>"><%=data.screenname %></option>
                                                
                                              </select>  
                                        </div>
                                        </div>


                                        <div class="row gap">
                                            <div class="col-md-6"> 
                                                <input required type="text" class="form-control" name="moviename" placeholder="Enter Movie Name" value="<%=data.moviename %>">
                                            </div>
                                        
                        
                                        
                                            <div class="col-md-6"> 
                                                <select required class="form-select"  name="status" aria-label="Default select example">
                                                    <option selected><%=data.status %></option>
                                                    <option >Running</option>
                                                    <option >Discontinue</option>
                                                    <option >Comming Soon</option>
                                                
                                                  </select>
                                            </div>
                                            </div>
                   
                                            <div class="row gap">
                                                <div class="col-md-12"> 
                                                    <input required type="text" class="form-control" name="description" placeholder="Description" value="<%=data.description %>">
                                                </div>
                                            </div>


                                            
                
                                                
                                <div class="row gap">
                                    <div class="col-md-6 btnstyle"> 
                                        <button style="width:300px" type="submit" name="btn" value="Edit" class="btn btn-primary">Edit</button>
                
                                    </div>
                                
                
                                
                                    <div class="col-md-6 btnstyle"> 
                                        <button style="width:300px" type="submit" name="btn" value="delete" class="btn btn-primary">Delete</button>
                                    </div>
                                    </div>
                                    
                           

                        

                       
                        <div class="row gap">
                            <div class="col-md-12 btnstyle"> 
                            <div><h4><%= message %></h4></div>
                            </div>
                            </div>
                            
                    </div>

                </div>

            </div>
        </form>
    </body>
</html>